<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home" tools:context="com.maxino.pandlk.htmlreportgenerator.HomeActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/requestList"
        android:scrollbars="vertical"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/request_list_empty_message"
        android:id="@+id/txtEmptyListMsg"
        android:textStyle="bold"
        android:textSize="42sp"
        android:textColor="@color/input_text_hint"
        android:layout_alignTop="@+id/requestList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp" />
</RelativeLayout>
